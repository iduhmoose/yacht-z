{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ], 
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/move/*",
        "function": "move"
      },
      {
        "source": "/roll/*",
        "function": "move"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
