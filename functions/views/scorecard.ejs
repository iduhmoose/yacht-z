<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Scorecard Temp</title>

  <!-- Main Scorecard CSS -->
  <link rel="stylesheet" type="text/css" href="styles/main.css">
</head>

<body id="yachZscorecard">
  <script src="cs-scoring.js" defer></script>

  <header>
    <svg id="bgTriangle" height="79" width="102" focusable="false">
      <polygon points="0,0 50,75 100,0" />
    </svg>
    <div id="headerText">
      <p>Welcome to</p>
      <h1>Yacht-Z</h1>
    </div>
  </header>

  <main>
    <!-- Gameboard Form -->
    <form id="gameboard" action="/app" method="post">

      <div id="opponent" class="player-character">
        <div id="opponentImg" class="player-icon"></div>
        <p id="opponentName" class="player-name">CPU</p>
        <p id="opponentScore" class="player-score">30 points</p>
      </div>

      <div id="playerDiceWrapper">
        <!-- Dice Row 1 -->
        <div id="playerDiceRow1" class="player-diceRow">
          <div class="player-dice" <%= visibility %>>
            <input id="die1" name="die1" type="checkbox">
            <label for="die1" style="background: url('images/die-<%= dice[0];%>pips.png')
            no-repeat; background-size: cover"></label>
            <input type="hidden" name="die1value" value="<%= dice[0]; %>">
          </div>
          <div class="player-dice" <%= visibility %>>
            <input id="die2" name="die2" type="checkbox">
            <label for="die2" style="background: url('images/die-<%= dice[1];%>pips.png')
              no-repeat; background-size: cover"></label>
            <input type="hidden" name="die2value" value="<%= dice[1]; %>">
          </div>
          <div class="player-dice" <%= visibility %>>
            <input id="die3" name="die3" type="checkbox">
            <label for="die3" style="background: url('images/die-<%= dice[2];%>pips.png')
              no-repeat; background-size: cover"></label>
            <input type="hidden" name="die3value" value="<%= dice[2]; %>">
          </div>
        </div>
        <!-- Dice Row 2 -->
        <div id="playerDiceRow2" class="player-diceRow">
          <div class="player-dice" <%= visibility %>>
            <input id="die4" name="die4" type="checkbox">
            <label for="die4" style="background: url('images/die-<%= dice[3];%>pips.png')
              no-repeat; background-size: cover"></label>
            <input type="hidden" name="die4value" value="<%= dice[3]; %>">
          </div>
          <div class="player-dice" <%= visibility %>>
            <input id="die5" name="die5" type="checkbox">
            <label for="die5" style="background: url('images/die-<%= dice[4];%>pips.png')
              no-repeat; background-size: cover"></label>
            <input type="hidden" name="die5value" value="<%= dice[4]; %>">
          </div>
        </div>
      </div>

      <% let showButton = `style=""`; %>
      <% if (parseInt(body.rollNum) >= 3) { showButton = `style=visibility:hidden`; } %>
      <button id="rerollBtn" type="submit" name="reroll" <%= showButton %>>
        <%= Roll %>
        <input type="hidden" name="rollNum" value="<%= parseInt(body.rollNum) + 1 %>">
      </button>

      <div id="user" class="player-character">
        <div id="userImg" class="player-icon"></div>
        <p id="userName" class="player-name">USER</p>
        <p id="userScore" class="player-score">100 points</p>
      </div>

      <table id="scorecard">
        <colgroup>
          <col id="columnHeader">
          <col id="columnPlayer">
          <col id="columnOpponent">
        </colgroup>
        <thead>
          <tr>
            <th id="blankHeaderSpace" scope="col"></th>
            <th id="youHeader" scope="col">You</th>
            <th id="cpuHeader" scope="col">CPU</th>
          </tr>
        </thead>
        <tbody>
          <tr id="onesRow">
            <th class="leftColumn" scope="row">Ones</th>
            <td class="centerColumn">
              <% if (typeof body.onesSelect !== 'undefined') { %>
              <p><%= body.onesSelect %></p>
              <input type="hidden" name="onesSelect" value="<%= body.onesSelect %>">
              <% } else { %>
              <button name="onesSelect" type="submit" value="<%= scores.ones %>"
                <%= visibility %>><%= scores.ones %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="twosRow">
            <th class="leftColumn" scope="row">Twos</th>
            <td class="centerColumn">
              <% if (typeof body.twosSelect !== 'undefined') { %>
              <p><%= body.twosSelect %></p>
              <input type="hidden" name="twosSelect" value="<%= body.twosSelect %>">
              <% } else { %>
              <button name="twosSelect" type="submit" value="<%= scores.twos %>"
                <%= visibility %>><%= scores.twos %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="threesRow">
            <th class="leftColumn" scope="row">Threes</th>
            <td class="centerColumn">
              <% if (typeof body.threesSelect !== 'undefined') { %>
              <p><%= body.threesSelect %></p>
              <input type="hidden" name="threesSelect" value="<%= body.threesSelect %>">
              <% } else { %>
              <button name="threesSelect" type="submit" value="<%= scores.threes %>"
                <%= visibility %>><%= scores.threes %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="foursRow">
            <th class="leftColumn" scope="row">Fours</th>
            <td class="centerColumn">
              <% if (typeof body.foursSelect !== 'undefined') { %>
              <p><%= body.foursSelect %></p>
              <input type="hidden" name="foursSelect" value="<%= body.foursSelect %>">
              <% } else { %>
              <button name="foursSelect" type="submit" value="<%= scores.fours %>"
                <%= visibility %>><%= scores.fours %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="fivesRow">
            <th class="leftColumn" scope="row">Fives</th>
            <td class="centerColumn">
              <% if (typeof body.fivesSelect !== 'undefined') { %>
              <p><%= body.fivesSelect %></p>
              <input type="hidden" name="fivesSelect" value="<%= body.fivesSelect %>">
              <% } else { %>
              <button name="fivesSelect" type="submit" value="<%= scores.fives %>"
                <%= visibility %>><%= scores.fives %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="sixesRow">
            <th class="leftColumn" scope="row">Sixes</th>
            <td class="centerColumn">
              <% if (typeof body.sixesSelect !== 'undefined') { %>
              <p><%= body.sixesSelect %></p>
              <input type="hidden" name="sixesSelect" value="<%= body.sixesSelect %>">
              <% } else { %>
              <button name="sixesSelect" type="submit" value="<%= scores.sixes %>"
                <%= visibility %>><%= scores.sixes %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="sumRow">
            <th class="leftColumn" scope="row">Sum</th>
            <td class="centerColumn"></td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="bonusRow">
            <th class="leftColumn" scope="row">Bonus</th>
            <td class="centerColumn"></td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="3OAKRow">
            <th class="leftColumn" scope="row">Three of a Kind</th>
            <td class="centerColumn">
              <% if (typeof body.threeOfAKindSelect !== 'undefined') { %>
              <p><%= body.threeOfAKindSelect %></p>
              <input type="hidden" name="threeOfAKindSelect"
                value="<%= body.threeOfAKindSelect %>">
              <% } else { %>
              <button name="threeOfAKindSelect" type="submit"
                value="<%= scores.three_of_a_kind %>"
                <%= visibility %>><%= scores.three_of_a_kind %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="4OAKRow">
            <th class="leftColumn" scope="row">Four of a Kind</th>
            <td class="centerColumn">
              <% if (typeof body.fourOfAKindSelect !== 'undefined') { %>
              <p><%= body.fourOfAKindSelect %></p>
              <input type="hidden" name="fourOfAKindSelect"
                value="<%= body.fourOfAKindSelect %>">
              <% } else { %>
              <button name="fourOfAKindSelect" type="submit"
                value="<%= scores.four_of_a_kind %>"
                <%= visibility %>><%= scores.four_of_a_kind %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="fullHouseRow">
            <th class="leftColumn" scope="row">Full House</th>
            <td class="centerColumn">
              <% if (typeof body.fullHouseSelect !== 'undefined') { %>
              <p><%= body.fullHouseSelect %></p>
              <input type="hidden" name="fullHouseSelect"
                value="<%= body.fullHouseSelect %>">
              <% } else { %>
              <button name="fullHouseSelect" type="submit"
                value="<%= scores.full_house %>"
                <%= visibility %>><%= scores.full_house %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="smallStraightRow">
            <th class="leftColumn" scope="row">Small Straight</th>
            <td class="centerColumn">
              <% if (typeof body.smallStraightSelect !== 'undefined') { %>
              <p><%= body.smallStraightSelect %></p>
              <input type="hidden" name="smallStraightSelect"
                value="<%= body.smallStraightSelect %>">
              <% } else { %>
              <button name="smallStraightSelect" type="submit"
                value="<%= scores.small_straight %>"
                <%= visibility %>><%= scores.small_straight %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="largeStraightRow">
            <th class="leftColumn" scope="row">Large Straight</th>
            <td class="centerColumn">
              <% if (typeof body.largeStraightSelect !== 'undefined') { %>
              <p><%= body.largeStraightSelect %></p>
              <input type="hidden" name="largeStraightSelect"
                value="<%= body.largeStraightSelect %>">
              <% } else { %>
              <button name="largeStraightSelect" type="submit"
                value="<%= scores.large_straight %>"
                <%= visibility %>><%= scores.large_straight %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="chanceRow">
            <th class="leftColumn" scope="row">Chance</th>
            <td class="centerColumn">
              <% if (typeof body.chanceSelect !== 'undefined') { %>
              <p><%= body.chanceSelect %></p>
              <input type="hidden" name="chanceSelect" value="<%= body.chanceSelect %>">
              <% } else { %>
              <button name="chanceSelect" type="submit" value="<%= scores.chance %>"
                <%= visibility %>><%= scores.chance %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="yachtZRow">
            <th class="leftColumn" scope="row">YACHT-Z</th>
            <td class="centerColumn">
              <% if (typeof body.yachtZSelect !== 'undefined') { %>
              <p><%= body.yachtZSelect %></p>
              <input type="hidden" name="yachtZSelect" value="<%= body.yachtZSelect %>">
              <% } else { %>
              <button name="yachtZSelect" type="submit" value="<%= scores.yacht_z %>"
                <%= visibility %>><%= scores.yacht_z %></button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="totalScoreRow">
            <th class="leftColumn" scope="row">TOTAL SCORE</th>
            <td class="centerColumn"></td>
            <td class="rightColumn"></td>
          </tr>
        </tbody>
      </table>
    </form>
  </main>
</body>

</html>