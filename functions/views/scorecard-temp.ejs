              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="4OAKRow">
            <th class="leftColumn" scope="row">Four of a Kind</th>
            <td class="centerColumn">
              <% if (typeof body.fourOfAKindSelect !== 'undefined') { %>
              <p><%= body.dicetotal %></p>
              <input type="hidden" name="fourOfAKindSelect">
              <% } else { %>
              <button name="fourOfAKindSelect" type="submit">Select</button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="fullHouseRow">
            <th class="leftColumn" scope="row">Full House</th>
            <td class="centerColumn">
              <% if (typeof body.fullHouseSelect !== 'undefined') { %>
              <p><%= body.dicetotal %></p>
              <input type="hidden" name="fullHouseSelect">
              <% } else { %>
              <button name="fullHouseSelect" type="submit">Select</button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="smallStraightRow">
            <th class="leftColumn" scope="row">Small Straight</th>
            <td class="centerColumn">
              <% if (typeof body.smallStraightSelect !== 'undefined') { %>
              <p><%= body.dicetotal %></p>
              <input type="hidden" name="smallStraightSelect">
              <% } else { %>
              <button name="smallStraightSelect" type="submit">Select</button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="largeStraightRow">
            <th class="leftColumn" scope="row">Large Straight</th>
            <td class="centerColumn">
              <% if (typeof body.largeStraightSelect !== 'undefined') { %>
              <p><%= body.dicetotal %></p>
              <input type="hidden" name="largeStraightSelect">
              <% } else { %>
              <button name="largeStraightSelect" type="submit">Select</button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="chanceRow">
            <th class="leftColumn" scope="row">Chance</th>
            <td class="centerColumn">
              <% if (typeof body.chanceSelect !== 'undefined') { %>
              <p><%= body.dicetotal %></p>
              <input type="hidden" name="chanceSelect">
              <% } else { %>
              <button name="chanceSelect" type="submit">Select</button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="yachtZRow">
            <th class="leftColumn" scope="row">YACHT-Z</th>
            <td class="centerColumn">
              <% if (typeof body.yachtZSelect !== 'undefined') { %>
              <p><%= body.dicetotal %></p>
              <input type="hidden" name="yachtZSelect">
              <% } else { %>
              <button name="yachtZSelect" type="submit">Select</button>
              <% } %>
            </td>
            <td class="rightColumn"></td>
          </tr>
          <tr id="totalScoreRow">
            <th class="leftColumn" scope="row">TOTAL SCORE</th>
            <td class="centerColumn"></td>
            <td class="rightColumn"></td>
          </tr>
        </tbody>
      </table>
    </form>
  </main>
</body>

</html>